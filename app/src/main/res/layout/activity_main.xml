<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <Button
        android:id="@+id/cancelButtonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"

        android:text="✘"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="610dp" />

    <Button
        android:id="@+id/optionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#26089E"
        android:text="config"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="610dp" />

    <Button
        android:id="@+id/checkButtonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fffff"
        android:text="✔"
        android:textColor="@android:color/holo_green_dark"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="610dp" />

    <TextView
        android:id="@+id/RopAppView"
        android:layout_width="183dp"
        android:layout_height="64dp"
        android:layout_marginTop="5dp"
        android:text="RopApp"
        android:textColor="#27089E"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="180dp" />

    <EditText
        android:id="@+id/LlenarUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="240dp" />

    <EditText
        android:id="@+id/LlenarPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="403dp" />

    In

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:textColor="#AB774D"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/TextUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="206dp" />

    <TextView
        android:id="@+id/TextPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="368dp" />

    <Button
        android:id="@+id/accountButton"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:background="#26089E"
        android:text="Crear Cuenta"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="504dp" />

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="107dp"
        android:layout_height="98dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="-13dp"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>