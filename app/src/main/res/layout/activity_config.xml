<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <Button
        android:id="@+id/cancelButtonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="✘"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="610dp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#26089E"
        android:text="BACK"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="610dp" />

    <Button
        android:id="@+id/checkButtonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fffff"
        android:text="✔"
        android:textColor="@android:color/holo_green_dark"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="610dp" />

    <TextView
        android:id="@+id/RopAppView"
        android:layout_width="183dp"
        android:layout_height="64dp"
        android:layout_marginTop="5dp"
        android:text="RopApp"
        android:textColor="#27089E"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="180dp" />

    In

    <TextView
        android:id="@+id/textConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuración"
        android:textColor="#AB774D"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="102dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="107dp"
        android:layout_height="98dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="-13dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/cerrarButton"
        android:layout_width="347dp"
        android:layout_height="53dp"
        android:text="Cerrar Sesión"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="339dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="347dp"
        android:layout_height="53dp"
        android:text="IDIOMA"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="177dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="347dp"
        android:layout_height="53dp"
        android:text="CREDITOS"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="254dp" />

</androidx.constraintlayout.widget.ConstraintLayout>